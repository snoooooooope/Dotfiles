abbr 'mv'='mv -i'
abbr 'rg'='rg -i'
abbr 'jf'='sudo journalctl -f -u'
abbr 'jb'='sudo journalctl -b -u'
abbr 'txvf'='tar -xvf'
abbr 'tcvf'='tar -cvf'
